---
import Layout from "@/layouts/Article.astro";
import { getCollection, render } from "astro:content";
import { Image } from "astro:assets";
import { useTranslations, type Lang } from "@/i18n";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return posts.map((post) => {
    const [lang, ...id] = post.id.split("/");
    return { params: { lang, id: id.join("/") || undefined }, props: post };
  });
}

const { lang } = Astro.params;
const post = Astro.props;
const t = useTranslations(lang as Lang);

const { Content } = await render(post);
const title = post.data.title;

const formattedDate = post.data.date.toLocaleDateString(lang, {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout {title}>
  <a href={`/${lang}/blog/`} class="back-link">
    ← {t({ en: "Back to Blog", ro: "Înapoi la Blog" })}
  </a>

  <div class="frame">
    {
      post.data.cover && (
        <Image src={post.data.cover} alt={post.data.title} class="cover" />
      )
    }

    <div class="frame-body">
      <header>
        <h1>{title}</h1>
        {post.data.description && (
          <p class="description">{post.data.description}</p>
        )}
        <time datetime={post.data.date.toISOString()}>{formattedDate}</time>
      </header>

      <Content />
    </div>
  </div>
</Layout>

<style>
  .back-link {
    display: inline-block;
    font-size: 0.8rem;
    color: var(--color-theme);
    text-decoration: none;
    opacity: 0.8;
    margin-block-end: var(--sp-s);
    transition: 0.2s ease-out;

    &:hover {
      opacity: 1;
      letter-spacing: 0.5px;
    }
  }

  .frame {
    border-radius: 8px;
    overflow: hidden;
    background-color: color-mix(in srgb, var(--color-main) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--color-main) 15%, transparent);
    border-top: 3px solid var(--color-theme);
  }

  .cover {
    width: 100%;
    max-height: 420px;
    object-fit: cover;
    display: block;
    border-radius: 0;
  }

  .frame-body {
    padding: var(--sp-m);
  }

  header {
    text-align: center;
    padding-block-end: var(--sp-m);
    margin-block-end: var(--sp-m);
    border-block-end: 2px solid var(--color-theme);

    h1 {
      color: var(--color-accent);
      font-size: 2rem;
      line-height: 1.25;
      margin-block: 0 var(--sp-s);
    }
  }

  .description {
    font-size: 1rem;
    opacity: 0.65;
    font-style: italic;
    margin-block: 0 var(--sp-s);
    line-height: 1.5;
  }

  time {
    display: inline-block;
    font-size: 0.78rem;
    color: var(--color-accent);
    opacity: 0.7;
    padding: 0.2rem 0.8rem;
    border: 1px solid color-mix(in srgb, var(--color-accent) 35%, transparent);
    border-radius: 999px;
  }
</style>
