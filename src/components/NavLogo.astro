---
//logo image load
import { Image } from "astro:assets";
import adcsLogo from "@/assets/adcs-logo.jpg";

//translation load
import { useTranslations, type Lang } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
import LocaleSelectSingle from "./i18n/LocaleSelectSingle.astro";
import ThemeToggle from "./ThemeToggle.astro";
const locale = Astro.currentLocale as Lang;
const isActive = (path: string) =>
  getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
const t = useTranslations(Astro.currentLocale as Lang);
---

<nav class="logo-nav shadow-md mb-4">
  <div class="mx-auto flex flex-wrap items-center justify-between">
    <!-- Logo -->
    <a href={getRelativeLocaleUrl(locale, "/")} class="text_header">
      <Image
        src={adcsLogo}
        alt={t({ en: "Adcs Logo", ro: "Logo-ul Adcs" })}
        class="logo_header"
        loading="eager"
      />
      <div class="text-header font-bold logo-title">ADCS.</div>
    </a>

    <!-- Desktop Menu -->
    <ul class="logo-nav-actions">
      <li>
        <a
          href="https://www.facebook.com/profile.php?id=61557876935991"
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="material-icons-sharp fb-icon">facebook</span>
        </a>
      </li>
      <li>
        <ThemeToggle />
      </li>
      <li>
        <LocaleSelectSingle />
      </li>
    </ul>

    <style>
      .logo-nav {
        background-color: transparent;
      }

      .logo_header {
        height: 4rem;
        width: 4rem !important;
        display: inline;
        border-radius: 100%;
        border: 2px solid var(--color-theme);
        box-shadow:
          0 0 0 4px color-mix(in srgb, var(--color-theme) 20%, transparent),
          0 4px 16px color-mix(in srgb, var(--color-theme) 25%, transparent);
        margin: 10px;
        float: left;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
      }

      .text_header {
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
        display: flex;
        align-items: center;
        padding-left: var(--sp-s);

        @media (width < 480px) {
          width: 100%;
        }
      }

      .logo-title {
        color: var(--color-theme);
        font-size: 2.5rem;
        font-weight: bold;
      }

      .fb-icon {
        font-size: 2rem !important;
        width: auto !important;
        height: auto !important;
        overflow: visible !important;
        color: var(--color-main);
        transition: color 0.3s ease;
        opacity: 0.8;

        &:hover {
          opacity: 1;
        }
      }

      .logo-nav-actions {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        list-style: none;
        margin: 0;
        padding: 0 1rem 0 0;

        @media (width < 480px) {
          width: 100%;
          justify-content: center;
          padding: 0 0 0.5rem 0;
        }
      }

      .language-meniu {
        display: inline-block;
      }
    </style>
  </div>
</nav>
